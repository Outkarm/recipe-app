<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render partial: 'layouts/shared/nav' %>
     <% if flash[:success]%>
      <div class='flash_success'>
        <%= flash[:success]%>
      </div>
    <% elsif flash[:alert] %>
      <div class='flash_error'>
        <%= flash[:error]%>
      </div>
    <% elsif flash.now[:success] %>
      <div class='flash_success'>
        <%= flash.now[:success] %>
      </div>
    <% end %>
    <main class='application_container'>
      <%= yield %>
    </main>
  </body>
</html>
